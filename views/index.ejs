
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Shorter URl</h1>
    <div>
        <form action="/url" method="POST">
            <label for="">Enter Your Main URl</label>
            <input type="text" name="url" placeholder="example: https://www.google.com">
            <br>
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <h3>Your Short Url</h3>
        <% if(locals.id){ %>
            <p>Url Generated : http://127.0.0.1:8000/url/<%= id%></p>
        <% } %>
    </div>
    <!-- Table -->
     <table>
        <thead>
            <th>S.NO</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
            <th>Time</th>
        </thead>
        <tbody>
            <% if (allUrls.length > 0) { %>
                <% allUrls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitorHistory.length %></td>
                        <td>
                            <% url.visitorHistory.forEach((visitor) => { %>
                                <%= visitor.timestamp %>
                            <% }) %>

                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5">No URLs found.</td>
                </tr>
            <% } %>
        </tbody>
     </table>
</body>
</html>